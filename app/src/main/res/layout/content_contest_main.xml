<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContestMainActivity"
    tools:showIn="@layout/app_bar_contest_main">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:foregroundGravity="center"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="160dp">

    </android.support.v4.view.ViewPager>



    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:elevation="0dp"
        android:layout_below="@+id/pager"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="#000000"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#b3b3b3" />





  <!--  <include layout="@layout/activity_tab_activity_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout1"/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerfortab"
        android:layout_below="@id/tab_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</RelativeLayout>